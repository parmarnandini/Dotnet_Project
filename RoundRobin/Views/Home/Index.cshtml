@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Welcome</h1>
    <p>Learn about <a href="https://learn.microsoft.com/aspnet/core">building Web apps with ASP.NET Core</a>.</p>
</div>

<h1>Round Robin Scheduler</h1>

<form asp-controller="RoundRobin" asp-action="Calculate" method="post">
    <label for="timeQuantum">Time Quantum:</label>
    <input type="number" id="timeQuantum" name="timeQuantum" required />
    <br />

    <table id="processTable">
        <tr>
            <th>Process</th>
            <th>Arrival Time</th>
            <th>Burst Time</th>
        </tr>
        <tr>
            <td>1</td>
            <td><input type="number" name="processes[0].ArrivalTime" required /></td>
            <td><input type="number" name="processes[0].BurstTime" required /></td>
        </tr>
        <tr>
            <td>2</td>
            <td><input type="number" name="processes[1].ArrivalTime" required /></td>
            <td><input type="number" name="processes[1].BurstTime" required /></td>
        </tr>
        <!-- Add more rows as needed -->
    </table>
    <br />

    <input type="submit" value="Calculate" />
</form>
    
